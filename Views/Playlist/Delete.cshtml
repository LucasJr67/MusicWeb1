namespace MusicWeb1.Views.Playlist
{
    public class Create
    {
    }
}

@model MusicWeb1.Models.Playlist

@{
    ViewData["Title"] = "Delete Playlist";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title mb-0">Delete Playlist</h3>
                </div>
                <div class="card-body text-center">
                    <img src="@(string.IsNullOrEmpty(Model.CoverImage) ? "/images/default-playlist.jpg" : Model.CoverImage)" 
                         class="rounded-circle mb-3" alt="@Model.Name" style="width: 150px; height: 150px; object-fit: cover;">
                    
                    <h4 class="mb-3">Are you sure you want to delete "@Model.Name"?</h4>
                    <p class="text-muted mb-4">
                        This playlist contains @Model.SongCount songs. This action cannot be undone.
                    </p>

                    <div class="d-flex justify-content-center gap-3">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                        <form asp-action="Delete" method="post">
                            <input type="hidden" asp-for="PlaylistId" />
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete Playlist
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 15px;
            overflow: hidden;
        }
        .card-header {
            border-top-left-radius: 15px !important;
            border-top-right-radius: 15px !important;
        }
        .rounded-circle {
            border: 5px solid #fff;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
    </style>
}
